# Пример override файла для docker-compose.yml
# Скопируйте в docker-compose.override.yml и настройте под ваше окружение

version: '3.8'

services:
  streamlit:
    # Переопределение порта (если нужно)
    ports:
      - "8505:8504"  # Внешний порт:внутренний порт
    
    # Дополнительные переменные окружения
    environment:
      - LOG_LEVEL=DEBUG
      - EMBEDDING_MODEL=intfloat/multilingual-e5-large  # Более мощная модель
    
    # Ограничения ресурсов
    deploy:
      resources:
        limits:
          cpus: '2.0'
          memory: 4G
        reservations:
          cpus: '1.0'
          memory: 2G

  qdrant:
    # Ограничения ресурсов для Qdrant
    deploy:
      resources:
        limits:
          cpus: '1.0'
          memory: 2G
        reservations:
          cpus: '0.5'
          memory: 1G



